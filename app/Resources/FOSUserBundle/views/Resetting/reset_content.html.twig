{% trans_default_domain 'FOSUserBundle' %}
<div class="row">
    <div class="col-md-3 col-sm-6 col-xs-12">
        <form  role="form" action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">

            <div class="form-group">
                {{ form_label(form.plainPassword.first) }}
                {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} } ) }}
                {{ form_errors(form.plainPassword.first) }}
            </div>
            <div class="form-group">
                {{ form_label(form.plainPassword.second) }}
                {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} } ) }}
            </div>

            {{ form_rest(form) }}
            <button type="submit" class="btn btn-default" id="_submit" name="_submit">{{ 'resetting.reset.submit'|trans }}</button>
        </form>
    </div>
</div>
