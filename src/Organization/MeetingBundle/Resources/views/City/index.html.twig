{% extends '::base.html.twig' %}

{% block body -%}
    <h1>{{ 'organization.city.list' | trans }}</h1>
    <p>
        <a href="{{ path('city_new') }}" class="btn btn-primary">
            {{ 'button.create' | trans }}
        </a>
    </p>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>{{ 'list.number' | trans }}</th>
                <th>{{ 'organization.city.name' | trans }}</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('city_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('city_show', { 'id': entity.id }) }}">{{ 'button.show' | trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('city_edit', { 'id': entity.id }) }}">{{ 'button.edit' | trans }}</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
