{% extends '::base.html.twig' %}

{% block body -%}
    <h1>{{ 'organization.topic.details' | trans }}</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{ 'organization.topic.name' | trans }}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{ 'organization.topic.description' | trans }}</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-default" href="{{ path('topic_edit', { 'id': entity.id }) }}">
        {{ 'button.edit' | trans }}
    </a>

    {# {{ form(delete_form) }} #}
{% endblock %}
