{% extends '::base.html.twig' %}

{% block body -%}
    <h1>{{ 'organization.management.city.list' | trans }}</h1>
    <p>
        <a href="{{ path('city_new') }}" class="btn btn-primary">
            {{ 'button.create' | trans }}
        </a>
    </p>

    {% if entities is not empty %}
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>{{ 'list.number' | trans }}</th>
                    <th>{{ 'organization.management.city.name' | trans }}</th>
                    <th>{{ 'organization.management.city.email' | trans }}</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ loop.index }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.email }}</td>
                    <td>
                    <ul>
                        <li>
                            <a href="{{ path('city_show', { 'id': entity.id }) }}">{{ 'button.show' | trans }}</a>
                        </li>
                        <li>
                            <a href="{{ path('city_edit', { 'id': entity.id }) }}">{{ 'button.edit' | trans }}</a>
                        </li>
                    </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
