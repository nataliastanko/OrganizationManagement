{% extends '::base.html.twig' %}

{% block body -%}

    <div class="header">
        <h1>{{ 'organization.management.city.details' | trans }}</h1>
        <div class="button-back">
             <a class="btn btn-default" href="{{ path('city') }}">
                {{ 'button.back' | trans }}
            </a>
        </div>
    </div>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{ 'organization.management.city.name' | trans }}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{ 'organization.management.city.email' | trans }}</th>
                <td>{{ entity.email }}</td>
            </tr>
        </tbody>
    </table>

    <div class="pull-left">
         <a class="btn btn-default" href="{{ path('city_edit', { 'id': entity.id }) }}">
            {{ 'button.edit' | trans }}
        </a>
    </div>
    {% if is_granted('ROLE_ADMIN') %}
        <div class="pull-right">
            {{ form(delete_form) }}
        </div>
    {% endif %}
{% endblock %}
