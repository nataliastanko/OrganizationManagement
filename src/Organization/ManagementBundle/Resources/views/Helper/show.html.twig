{% extends '::base.html.twig' %}

{% block body -%}
    <h1>{{ 'organization.management.helper.details' | trans }}</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{ 'organization.management.helper.name' | trans }}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{ 'organization.management.helper.lastName' | trans }}</th>
                <td>{{ entity.lastName }}</td>
            </tr>
            <tr>
                <th>{{ 'organization.management.helper.email' | trans }}</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>{{ 'organization.management.helper.url' | trans }}</th>
                <td>{{ entity.url }}</td>
            </tr>
            <tr>
                <th>{{ 'organization.management.helper.phoneNumber' | trans }}</th>
                <td>{{ entity.phoneNumber }}</td>
            </tr>
            <tr>
                <th>{{ 'organization.management.helper.description' | trans }}</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-default" href="{{ path('helper_edit', { 'id': entity.id }) }}">
        {{ 'button.edit' | trans }}
    </a>

    {# {{ form(delete_form) }} #}
{% endblock %}
