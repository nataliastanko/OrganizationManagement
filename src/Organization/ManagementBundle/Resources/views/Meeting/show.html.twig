{% extends '::base.html.twig' %}

{% block body -%}

    <div class="header">
        <h1>{{ 'organization.management.meeting.details' | trans }}</h1>
        <div class="button-back">
             <a class="btn btn-default" href="{{ path('meeting') }}">
                {{ 'button.back' | trans }}
            </a>
        </div>
    </div>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>{{ 'organization.management.meeting.startDate' | trans }}</th>
                <td>{{ entity.startDate.format('d-m-Y H:i:s') }}</td>
            </tr>
            <tr>
                <th>{{ 'organization.management.meeting.name' | trans }}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{ 'organization.management.meeting.description' | trans }}</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>{{ 'organization.management.meeting.topics' | trans }}</th>
                <td>
                    {% for city in entity.topics %}
                        <p>{{ city.fullname }}</p>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>{{ 'organization.management.meeting.partners' | trans }}</th>
                <td>
                    {% for city in entity.partners %}
                        <p>{{ city.name }}</p>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>{{ 'organization.management.meeting.sponsors' | trans }}</th>
                <td>
                    {% for city in entity.sponsors %}
                        <p>{{ city.name }}</p>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>{{ 'organization.management.meeting.facebookUrl' | trans }}</th>
                <td><a href="{{ entity.facebookUrl }}">{{ entity.facebookUrl }}</a></td>
            </tr>
            <tr>
                <th>{{ 'organization.management.meeting.ticketsUrl' | trans }}</th>
                <td><a href="{{ entity.ticketsUrl }}">{{ entity.ticketsUrl }}</a></td>
            </tr>
        </tbody>
    </table>

   <div class="pull-left">
         <a class="btn btn-default" href="{{ path('meeting_edit', { 'id': entity.id }) }}">
            {{ 'button.edit' | trans }}
        </a>
    </div>
    <div class="pull-right">
        {{ form(delete_form) }}
    </div>
{% endblock %}
