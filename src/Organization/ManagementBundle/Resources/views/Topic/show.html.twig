{% extends '::base.html.twig' %}

{% block body -%}

    <div class="header">
        <h1>{{ 'organization.management.topic.details' | trans }}</h1>
        <div class="button-back">
             <a class="btn btn-default" href="{{ path('topic') }}">
                {{ 'button.back' | trans }}
            </a>
        </div>
    </div>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>{{ 'organization.management.topic.speaker' | trans }}</th>
                <td><a href="{{ path('speaker_show', {'id':entity.speaker.id}) }}">{{ entity.speaker.fullname }}</a></td>
            </tr>
            <tr>
                <th>{{ 'organization.management.topic.name' | trans }}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{ 'organization.management.topic.description' | trans }}</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

    <div class="pull-left">
         <a class="btn btn-default" href="{{ path('topic_edit', { 'id': entity.id }) }}">
            {{ 'button.edit' | trans }}
        </a>
    </div>
    <div class="pull-right">
        {{ form(delete_form) }}
    </div>
{% endblock %}
