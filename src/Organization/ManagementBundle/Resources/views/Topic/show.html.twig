{% extends '::base.html.twig' %}

{% block body -%}
    <h1>{{ 'organization.management.topic.details' | trans }}</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{ 'organization.management.topic.name' | trans }}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{ 'organization.management.topic.description' | trans }}</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

    <div class="pull-left">
         <a class="btn btn-default" href="{{ path('topic_edit', { 'id': entity.id }) }}">
            {{ 'button.edit' | trans }}
        </a>
    </div>
    <div class="pull-right">
        {{ form(delete_form) }}
    </div>
{% endblock %}
