{% extends '::base.html.twig' %}

{% block body -%}
    <h1>{{ 'organization.management.speaker.details' | trans }}</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{ 'organization.management.speaker.name' | trans }}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{ 'organization.management.speaker.lastName' | trans }}</th>
                <td>{{ entity.lastName }}</td>
            </tr>
            <tr>
                <th>{{ 'organization.management.speaker.email' | trans }}</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>{{ 'organization.management.speaker.phoneNumber' | trans }}</th>
                <td>{{ entity.phoneNumber }}</td>
            </tr>
            <tr>
                <th>{{ 'organization.management.speaker.url' | trans }}</th>
                <td><a href="{{ entity.url }}">{{ entity.url }}</a></td>
            </tr>
            <tr>
                <th>{{ 'organization.management.speaker.bio' | trans }}</th>
                <td>{{ entity.bio }}</td>
            </tr>
        </tbody>
    </table>
    <div class="clearfix">
        <div class="pull-left">
             <a class="btn btn-default" href="{{ path('speaker_edit', { 'id': entity.id }) }}">
                {{ 'button.edit' | trans }}
            </a>
        </div>
        <div class="pull-right">
            {{ form(delete_form) }}
        </div>
    </div>

    <hr />

    {% include "OrganizationManagementBundle:Topic:_list.html.twig" with {'entities' : entity.topics} %}

{% endblock %}
