{% extends '::base.html.twig' %}

{% block body -%}
    <div class="page-header">
        <h1>{{ 'enrollment.person.list' | trans }}</h1>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>{{ 'list.number' | trans }}</th>
                <th>{{ 'enrollment.person.name' | trans }}</th>
                <th>{{ 'enrollment.person.email' | trans }}</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.email }}</td>
                <td>
                <ul class="list-unstyled">
                    <li>
                        <a href="{{ path('person_show', { 'id': entity.id }) }}">{{ 'button.show' | trans }}</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
