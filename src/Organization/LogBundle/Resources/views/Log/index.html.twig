{% extends '::base.html.twig' %}

{% block body -%}
    <div class="page-header">
        <h1>Log list</h1>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>User</th>
                <th>Class</th>
                {# <th>Object name</th> #}
                <th>Action</th>
                <th>Date</th>
                <th>Data after</th>
                <th>Object id</th>
                <th>Version</th>
                <th>Revert</th>
            </tr>
        </thead>
        <tbody>
        {% for log in logs %}
            <tr>
                <td>{{ log.username }}</td>
                <td>{{ log.objectClass }}</td>
                {# <td>{{ log.objectName }}</td> #}
                <td>{{ log.action }}</td>
                <td>{{ log.loggedAt.format('d-m-Y H:i:s') }}</td>
                <td>{{ log.data|array2string|raw }}</td>
                <td>{{ log.objectId }}</td>
                <td>{{ log.version }}</td>
                <td>
                    {% if log.action == 'remove' %}
                       <a href="{{ path('log_restore', { 'id': log.id }) }}">restore</a>
                    {% else %}
                        <a href="{{ path('log_revert', { 'id': log.id }) }}">revert to version</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
