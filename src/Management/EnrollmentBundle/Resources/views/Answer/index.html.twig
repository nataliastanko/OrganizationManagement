{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Answer list</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('answer_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.content }}</td>
                <td>
                <ul class="list-unstyled">
                    <li>
                        <a href="{{ path('answer_show', { 'id': entity.id }) }}">show</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
