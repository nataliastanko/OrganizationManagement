<div class="page-header">
    <h1>{{ 'enrollment.answer.list' | trans }}</h1>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>{{ 'enrollment.question.name' | trans }}</th>
            <th>{{ 'enrollment.answer.content' | trans }}</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.question.name }}</td>
            <td>{{ entity.content }}</td>
            <td>
            <ul class="list-unstyled">
                <li>
                    <a href="{{ path('answer_show', { 'id': entity.id }) }}">{{ 'button.show' | trans }}</a>
                </li>
            </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>